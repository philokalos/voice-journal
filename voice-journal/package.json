{
  "name": "voice-journal",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run check:secrets && tsc -b && vite build",
    "build:unsafe": "tsc -b && vite build",
    "build:prod": "NODE_ENV=production npm run build",
    "build:staging": "NODE_ENV=staging npm run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "check:secrets": "node scripts/check-secrets.js",
    "check:env": "node scripts/check-secrets.js",
    "security-check": "npm audit --audit-level high",
    "prebuild": "npm run check:secrets",
    "test": "NODE_OPTIONS='--max-old-space-size=4096' jest",
    "test:unit": "NODE_OPTIONS='--max-old-space-size=4096' jest --testPathPatterns=src",
    "test:coverage": "NODE_OPTIONS='--max-old-space-size=4096' jest --coverage",
    "test:watch": "NODE_OPTIONS='--max-old-space-size=4096' jest --watch",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:component": "cypress run --component",
    "test:component:open": "cypress open --component",
    "health-check": "curl -f http://localhost:4173/ || exit 1",
    "deploy:preview": "vercel --token $VERCEL_TOKEN",
    "deploy:staging": "vercel --prod --token $VERCEL_TOKEN --target staging",
    "deploy:production": "vercel --prod --token $VERCEL_TOKEN",
    "deploy:test": "node scripts/deploy-test.js"
  },
  "dependencies": {
    "@google-cloud/language": "^7.2.0",
    "@tanstack/react-query": "^5.83.0",
    "dexie": "^4.0.11",
    "firebase": "^11.10.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^6.30.1",
    "react-window": "^1.8.11",
    "react-window-infinite-loader": "^1.0.10"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.30.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-window": "^1.8.8",
    "@types/react-window-infinite-loader": "^1.0.9",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^30.0.5",
    "cypress": "^14.5.3",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^5.4.19",
    "vite-plugin-pwa": "^1.0.1"
  }
}
