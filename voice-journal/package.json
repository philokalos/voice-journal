{
  "name": "voice-journal",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run check:secrets && tsc -b && vite build",
    "build:unsafe": "tsc -b && vite build",
    "build:prod": "NODE_ENV=production npm run build",
    "build:staging": "NODE_ENV=staging npm run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "check:secrets": "node scripts/check-secrets.js",
    "check:env": "node scripts/check-secrets.js",
    "security-check": "npm audit --audit-level high",
    "prebuild": "npm run check:secrets",
    "test": "echo 'No tests specified' && exit 0",
    "test:unit": "echo 'Unit tests not implemented yet' && exit 0",
    "test:e2e": "echo 'E2E tests not implemented yet' && exit 0",
    "health-check": "curl -f http://localhost:4173/ || exit 1",
    "deploy:preview": "vercel --token $VERCEL_TOKEN",
    "deploy:staging": "vercel --prod --token $VERCEL_TOKEN --target staging",
    "deploy:production": "vercel --prod --token $VERCEL_TOKEN",
    "deploy:test": "node scripts/deploy-test.js"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.83.0",
    "dexie": "^4.0.11",
    "firebase": "^11.10.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^6.30.1",
    "react-window": "^1.8.11",
    "react-window-infinite-loader": "^1.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-window": "^1.8.8",
    "@types/react-window-infinite-loader": "^1.0.9",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^5.4.19",
    "vite-plugin-pwa": "^1.0.1"
  }
}
